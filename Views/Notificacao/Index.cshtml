@model IEnumerable<Fiap.Web.SmartWasteManagement.ViewModels.NotificacaoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Notificações</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leitura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoMorador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoRecipiente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leitura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoMorador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoRecipiente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codigo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Codigo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Codigo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
